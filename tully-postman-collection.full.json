        {
          "name": "Create Task (with attachments)",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/tasks",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "tasks"
              ]
            },
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "title",
                  "type": "text",
                  "value": "Read Chapter 1"
                },
                {
                  "key": "course",
                  "type": "text",
                  "value": "Computer Science"
                },
                {
                  "key": "time",
                  "type": "text",
                  "value": "10:00"
                },
                {
                  "key": "deadline",
                  "type": "text",
                  "value": "2025-01-01"
                },
                {
                  "key": "overview",
                  "type": "text",
                  "value": "Read and summarize chapter 1."
                },
                {
                  "key": "repeat",
                  "type": "text",
                  "value": "none"
                },
                {
                  "key": "priority",
                  "type": "text",
                  "value": "Medium"
                },
                {
                  "key": "notes",
                  "type": "text",
                  "value": "Focus on key terms."
                },
                {
                  "key": "subtasks",
                  "type": "text",
                  "value": "[{\"title\": \"Read pages 1-10\", \"done\": false}, {\"title\": \"Write summary\", \"done\": false}]"
                },
                {
                  "key": "attachments",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "description": "multipart/form-data. Add up to 10 files with key `attachments`. `subtasks` can be JSON string."
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const json = pm.response.json();",
                  "if (json?.data?.task?._id) pm.collectionVariables.set(\"taskId\", json.data.task._id);",
                  "if (json?.data?.task?.attachments?.length) {",
                  "  const first = json.data.task.attachments[0];",
                  "  if (first?._id) pm.collectionVariables.set(\"attachmentId\", first._id);",
                  "}"
                ]
              }
            }
          ]
        },
